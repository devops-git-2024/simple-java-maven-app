pipeline {

    agent any 
    
    tools {
        maven "mvn"
        
    }

    environment{
        DOCKER_USER="proindia"
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit '**target/surefire-reports/*.xml'
                }
            }
        }

        stage('Build docker image') {
            steps {
                sh ''' 
                    docker build -t proindia/java_project .
                '''    
            }
        }

        stage('push docker image to dockerhub repo') {
            steps {
       
               withCredentials([gitUsernamePassword(credentialsId: 'DockerHub', gitToolName: 'Default')]) {
                    sh 'docker login -u ${DOCKER_USER} -p ${DockerHub}'
                sh 'docker push proindia/java_project:latest'
                sh ' docker logout'
                }
            }
        }

        stage('Deployment') {
            steps {
                sh 'java -jar /var/lib/jenkins/workspace/Pipeline-new/target/*.jar'
            }
        }
    }
}



        
